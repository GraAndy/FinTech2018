@model IEnumerable<FinTech.Models.Card>

@{
    ViewBag.Title = "Карты";
}

<h2>Карты</h2>

<p>
    @using (Html.BeginForm("Index", "Cards"))
    {
        <input type="text" class="form-control" name="CardCode" id="CardCode" placeholder="Код" />
        <input type="text" class="form-control" name="CardPassword" id="CardPassword" placeholder="Пароль" />
        <input type="submit" value="Добавить" class="btn btn-default" />
        @Html.AntiForgeryToken()
    }
    @Html.Raw(ViewData["Message"])
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th>
            Назначена
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
        </td>
        <td>
            @Html.ActionLink("Блокировать", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
